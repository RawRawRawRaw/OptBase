<Window x:Class="ОптоваяБаза1.AddEditWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ОптоваяБаза1"
        mc:Ignorable="d"
        Title="AddEditWin" x:Name="WindowAddEdit" Height="360" Width="210" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid Background="White">
        <Label Content="Добавить запись" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="167"/>
        <Label Content="Код товара" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top" Height="30" Width="167"/>
        <TextBox x:Name="kod" Text="{Binding КодТовара}" HorizontalAlignment="Left" Margin="10,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="167"/>
        <Button x:Name="btnAddEdit" Content="Добавить/&#xA;Изменить" Click="AddEdit_click" HorizontalAlignment="Left" Margin="10,231,0,0" VerticalAlignment="Top" Height="36" Width="167" BorderBrush="White" Background="#FFDEDEDE"/>
        <Button Content="Отмена" Click="esc_click" HorizontalAlignment="Left" Margin="10,272,0,0" VerticalAlignment="Top" Height="36" Width="167" Background="#FFE0E0E0" BorderBrush="White"/>
        <Label Content="Номер поставщика" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top" Height="30" Width="167"/>
        <TextBox x:Name="Nomer" Text="{Binding НомерПоставщика}" HorizontalAlignment="Left" Margin="10,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="167"/>
        <Label Content="Ключ" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" Height="30" Width="167"/>
        <TextBox x:Name="Kl" Text="{Binding Ключ}" HorizontalAlignment="Left" Margin="10,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="167"/>
    </Grid>
</Window>
